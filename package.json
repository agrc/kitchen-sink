{
  "name": "@ugrc/kitchen-sink",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/agrc/kitchen-sink.git"
  },
  "license": "MIT",
  "author": "ugrc developers",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:storybook": "storybook build --docs --output-dir ./dist --disable-telemetry",
    "check": "tsc -b",
    "format": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --quiet --fix",
    "npm-check": "npx npm-check-updates --color --interactive --format group,repo --workspaces --root",
    "storybook": "run-p storybook:*",
    "storybook:dev": "storybook dev --port 6006",
    "storybook:firebase": "firebase emulators:start --import ./data/firebase --only auth",
    "firebase:save-state": "firebase emulators:start --import ./data/firebase --export-on-exit --only auth",
    "test": "vitest"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-packagejson",
      "prettier-plugin-organize-imports",
      "prettier-plugin-tailwindcss"
    ],
    "semi": true,
    "singleQuote": true,
    "tailwindFunctions": [
      "clsx",
      "tv",
      "twJoin",
      "twMerge"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "jest": true,
      "node": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "react",
      "prettier",
      "import",
      "jsx-a11y",
      "react-hooks"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:react-hooks/recommended",
      "plugin:import/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ]
  },
  "dependencies": {
    "@arcgis/core": "^4.31.6",
    "lucide-react": "^0.469.0",
    "react": ">=16.8.0",
    "react-hook-form": "^7.54.2",
    "react-lorem-ipsum": "^1.4.10"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.3",
    "@mdx-js/react": "^3.1.0",
    "@storybook/addon-actions": "^8.4.7",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/addon-themes": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^22.10.5",
    "@ugrc/tsconfigs": "^1.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jsdom": "^26.0.0",
    "msw": "^2.7.0",
    "msw-storybook-addon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.6",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "read-pkg": "^9.0.1",
    "release-please": "^16.15.0",
    "storybook": "^8.4.7",
    "tailwindcss": "^4.0.2",
    "tailwindcss-react-aria-components": "^1.2.0",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "^3.0.4"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
