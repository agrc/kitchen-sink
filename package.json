{
  "name": "@ugrc/kitchen-sink",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/agrc/kitchen-sink.git"
  },
  "license": "MIT",
  "author": "ugrc developers",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace @ugrc/utilities --workspace @ugrc/utah-design-system --workspace @ugrc/dart-board --workspace @ugrc/layer-selector --workspace @ugrc/mousetrap --workspace @ugrc/sherlock --workspace @ugrc/popover --workspace @ugrc/header",
    "build:storybook": "storybook build --docs --output-dir ./dist --disable-telemetry",
    "format": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --quiet --fix",
    "npm-check": "npx npm-check-updates --color --interactive --format group,repo --workspaces --root",
    "storybook": "run-p storybook:*",
    "storybook:dev": "storybook dev --port 6006",
    "storybook:firebase": "firebase emulators:start --import ./data/firebase --only auth",
    "firebase:save-state": "firebase emulators:start --import ./data/firebase --export-on-exit --only auth",
    "test": "vitest"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-packagejson",
      "prettier-plugin-tailwindcss"
    ],
    "semi": true,
    "singleQuote": true,
    "tailwindFunctions": [
      "clsx",
      "tv",
      "twJoin",
      "twMerge"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "jest": true,
      "node": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "react",
      "prettier",
      "import",
      "jsx-a11y",
      "react-hooks"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:react-hooks/recommended",
      "plugin:import/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ]
  },
  "dependencies": {
    "@arcgis/core": "^4.30.9",
    "lucide-react": "^0.446.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "react-hook-form": "^7.52.1",
    "react-lorem-ipsum": "^1.4.10"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.8.0",
    "@mdx-js/react": "^3.0.1",
    "@storybook/addon-actions": "^8.3.4",
    "@storybook/addon-essentials": "^8.3.4",
    "@storybook/addon-interactions": "^8.3.4",
    "@storybook/addon-links": "^8.3.4",
    "@storybook/addon-themes": "^8.3.4",
    "@storybook/react": "^8.3.4",
    "@storybook/react-vite": "^8.3.4",
    "@storybook/test": "^8.2.9",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^22.7.4",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.19",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jsdom": "^24.1.1",
    "msw": "^2.4.9",
    "msw-storybook-addon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "read-pkg": "^9.0.1",
    "release-please": "^16.14.0",
    "storybook": "^8.2.9",
    "tailwindcss": "^3.4.13",
    "tailwindcss-react-aria-components": "^1.1.6",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.2.3",
    "vitest": "^2.1.1"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
